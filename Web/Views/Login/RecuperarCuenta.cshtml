@{
	Layout = null;
}

<!doctype html>
<html lang="en">
<head>
	<title>Login 10</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

	<link rel="stylesheet" href="~/css/Login/Login.css">

</head>
<body class="img js-fullheight" style="background-image: url(/images/bg.jpg);">
	<section class="ftco-section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 text-center mb-5">
					<h2 class="heading-section">Recuperar Cuenta</h2>
				</div>
			</div>
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
						<p>Ingrese el codigo que ha sido enviado a su mail para recuperar la cuenta</p>
						<form action="CambiarClave" class="signin-form">
							<div class="form-group">
								<input type="number" maxlength="6" class="form-control" placeholder="Ingrese el codigo" name="Codigo" required />
							</div>
							<div class="form-group">
								<input type="password" class="form-control" placeholder="Ingrese su nueva clave" name="Clave" required />
							</div>
							<div class="form-group">
								<button type="submit" class="form-control btn btn-primary submit px-3">Cambiar Contraseña</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>

	<script src="~/lib/jquery/dist/jquery.js"></script>
	<script src="~/lib/popper/dist/popper.js"></script>
	<script src="~/lib/bootstrap/dist/bootstrap.js"></script>
	<script src="~/js/Login/Login.js"></script>

</body>
</html>

